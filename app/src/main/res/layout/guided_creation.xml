<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreationGuidee"
    >

<!--    Guideline Vertical -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightInput_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.70" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBnt_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.72" />

<!--     Guideline Horizontal -->

<!--    Partie image et explication-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalImageBottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.29" />

<!--    Partie pour le nom -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalNameBottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.36" />

<!--    Partie pour la race-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalRaceTop_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalRaceBottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.46" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalBntTopCusto_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalbntBottomCusto_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalBntTopFiche_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalBntBottomFiche_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.83" />

<!--     Contenu -->
    <ImageView
        android:id="@+id/imageViewDragon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/horizontalImageBottom_guideline"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textViewPresentation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/pres"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalImageBottom_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nom -->
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/nomPerso"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/red_dd"
        app:layout_constraintTop_toTopOf="@id/horizontalImageBottom_guideline"
        app:layout_constraintBottom_toBottomOf="@id/horizontalNameBottom_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        />

    <EditText
        android:id="@+id/editTextPersonName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@id/horizontalImageBottom_guideline"
        app:layout_constraintBottom_toBottomOf="@id/horizontalNameBottom_guideline"
        app:layout_constraintStart_toStartOf="@id/right_guideline"
        app:layout_constraintEnd_toEndOf="@id/rightInput_guideline"
        />

    <Button
        android:id="@+id/buttonValider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/valider"
        android:textSize="11sp"
        android:onClick="etapeSuivant"
        app:layout_constraintTop_toTopOf="@id/horizontalImageBottom_guideline"
        app:layout_constraintBottom_toBottomOf="@id/horizontalNameBottom_guideline"
        app:layout_constraintStart_toStartOf="@id/leftBnt_guideline"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <Button
        android:id="@+id/buttonAnnuler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/accueil"
        android:textSize="11sp"
        android:onClick="etapePrecedente"
        app:layout_constraintTop_toTopOf="@id/horizontalNameBottom_guideline"
        app:layout_constraintBottom_toBottomOf="@id/horizontalRaceTop_guideline"
        app:layout_constraintStart_toStartOf="@id/leftBnt_guideline"
        app:layout_constraintEnd_toEndOf="parent"
    />
    <!-- Race -->

    <Spinner
        android:id="@+id/spinnerRace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/horizontalImageBottom_guideline"
        app:layout_constraintBottom_toBottomOf="@id/horizontalNameBottom_guideline"
        app:layout_constraintStart_toStartOf="@id/right_guideline"
        app:layout_constraintEnd_toEndOf="@id/rightInput_guideline"
         />

    <TextView
        android:id="@+id/textViewTitreCarac"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@id/horizontalBntTopCusto_guideline"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toTopOf="@id/horizontalRaceBottom_guideline"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewCarac"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        app:layout_constraintTop_toTopOf="@id/horizontalRaceBottom_guideline"
        app:layout_constraintBottom_toBottomOf="@id/horizontalBntTopCusto_guideline"
        app:layout_constraintStart_toStartOf="@id/right_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="vertical"

       />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/horizontalbntBottomCusto_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </ScrollView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />


</androidx.constraintlayout.widget.ConstraintLayout>